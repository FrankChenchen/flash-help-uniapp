{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/setup/setup",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/index/index",
      "style": {
        "navigationStyle": "custom",
        "onReachBottomDistance": 600
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/user/user-edit",
      "style": {
        "navigationBarTitleText": "我的信息"
      }
    },
    {
      "path": "pages/task/task-publish",
      "style": {
        "navigationBarTitleText": "发布任务"
      }
    },
    {
      "path": "pages/address/address-list",
      "style": {
        "navigationBarTitleText": "我的地址",
        "onReachBottomDistance": 600
      }
    },
    {
      "path": "pages/address/address-add",
      "style": {
        "navigationBarTitleText": "添加地址"
      }
    },
    {
      "path": "pages/address/address-edit",
      "style": {
        "navigationBarTitleText": "编辑地址"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "华大快帮",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
